= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = devise_error_messages!
  %h2 Please sign up
  .container
    .row
      .col-xs-2
        .form-group
          = f.label :username, class: 'control-label col-xs-2'
          = f.text_field :username, autofocus: true, class: 'form-control col-xs-2'
        .form-group
          = f.label :email, class: 'control-label col-xs-2'
          = f.email_field :email, autofocus: true, class: 'form-control col-xs-2'
        .form-group
          = f.label :password, class: 'control-label col-xs-2'
          - if @minimum_password_length
            %em
              (#{@minimum_password_length} characters minimum)
          = f.password_field :password, autocomplete: "off", class: 'form-control col-xs-2'
        .form-group
          = f.label :password_confirmation, class: 'control-label col-xs-2'
          = f.password_field :password_confirmation, autocomplete: "off", class: 'form-control col-xs-2'
        = f.button "Sign up", class: 'btn btn-lg btn-primary btn-block'
        = render "devise/shared/links"
